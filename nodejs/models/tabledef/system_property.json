{
    "name": "system_property",
    "version": "0.0.1",
    "description": "System property table definition",
    "scope" : "protected",
    "fields": [
        {
            "name": "id",
            "type": "INTEGER",
            "primaryKey": true,
            "autoIncrement": true
        },
        {
            "name": "property_name",
            "type": "STRING",
            "length": 255,
            "notNull": true
        },
        {
            "name": "property_value",
            "type": "TEXT",
            "notNull": true
        },
        {
            "name": "description",
            "type": "TEXT",
            "notNull": true
        },
        {
            "name": "created_at",
            "type": "DATETIME",
            "default": "CURRENT_TIMESTAMP"
        },
        {
            "name": "updated_at",
            "type": "DATETIME",
            "default": "CURRENT_TIMESTAMP"
        },
        {
            "name": "deleted_at",
            "type": "DATETIME",
            "nullable": true
        }
    ]
}