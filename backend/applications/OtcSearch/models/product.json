{
    "name": "product",
    "version": "0.0.1",
    "description": "店舗内の医薬品・商品情報",
    "scope": "protected",
    "user_scope": "user_admin_readwrite",
    "fields": [
        {
            "name": "product_id",
            "type": "INTEGER",
            "primaryKey": true,
            "autoIncrement": true
        },
        {
            "name": "jan_code",
            "type": "STRING",
            "length": 13,
            "notNull": true,
            "unique": true
        },
        {
            "name": "product_name",
            "type": "STRING",
            "length": 255,
            "notNull": true
        },
        {
            "name": "product_category",
            "type": "STRING",
            "length": 50,
            "notNull": true
        },
        {
            "name": "is_switch_otc",
            "type": "BOOLEAN",
            "default": false,
            "notNull": true
        },
        {
            "name": "ingredients",
            "type": "TEXT",
            "notNull": true
        },
        {
            "name": "effects",
            "type": "TEXT",
            "notNull": true
        },
        {
            "name": "usage_instructions",
            "type": "TEXT",
            "notNull": true
        },
        {
            "name": "precautions",
            "type": "TEXT",
            "notNull": true
        },
        {
            "name": "price",
            "type": "INTEGER",
            "notNull": true
        },
        {
            "name": "stock_quantity",
            "type": "INTEGER",
            "default": 0,
            "notNull": true
        },
        {
            "name": "created_at",
            "type": "DATETIME",
            "default": "CURRENT_TIMESTAMP"
        },
        {
            "name": "updated_at",
            "type": "DATETIME",
            "default": "CURRENT_TIMESTAMP"
        },
        {
            "name": "deleted_at",
            "type": "DATETIME"
        }
    ]
}