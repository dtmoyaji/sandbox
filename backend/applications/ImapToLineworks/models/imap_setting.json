{
    "name": "imap_setting",
    "version": "0.0.1",
    "description": "IMAP設定を管理するテーブル",
    "scope": "protected",
    "user_scope": "user_readwrite",
    "fields": [
        {
            "name": "imap_setting_id",
            "type": "INTEGER",
            "primaryKey": true,
            "autoIncrement": true
        },
        {
            "name": "user_domain_id",
            "type": "INTEGER",
            "notNull": true,
            "foreignKey": {
                "table": "user_domain",
                "field": "user_domain_id"
            }
        },
        {
            "name": "user_id",
            "type": "INTEGER",
            "notNull": true,
            "foreignKey": {
                "table": "user",
                "field": "user_id"
            }
        },
        {
            "name": "imap_account",
            "type": "STRING",
            "unique": true,
            "length": 255,
            "notNull": true
        },
        {
            "name": "imap_host",
            "type": "STRING",
            "length": 255,
            "notNull": true
        },
        {
            "name": "imap_port",
            "type": "INTEGER",
            "notNull": true
        },
        {
            "name": "imap_tls",
            "type": "STRING",
            "notNull": true,
            "length": 255,
            "default": "true"
        },
        {
            "name": "imap_password",
            "type": "STRING",
            "length": 255,
            "notNull": true,
            "secret": true
        },
        {
            "name": "created_at",
            "type": "DATETIME",
            "default": "CURRENT_TIMESTAMP"
        },
        {
            "name": "updated_at",
            "type": "DATETIME",
            "default": "CURRENT_TIMESTAMP"
        },
        {
            "name": "deleted_at",
            "type": "DATETIME",
            "nullable": true
        }
    ]
}